{
  "tasks": {
    "start": "deno run -A --watch=static/ dev.ts",
    "local": "deno run -A --watch=static/ --importmap=import_map.local.json dev.ts",
    "component": "deno eval 'import \"$live/scripts/component.ts\"'",
    "copyPartytown": "deno eval 'import \"$live/scripts/copyPartytownFiles.ts\"'",
    "check": "deno fmt --check && deno lint"
  },
  "githooks": {
    "pre-commit": "check"
  },
  "importMap": "./import_map.local.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}
